#/bin/bash

for (( var=1; ; var++ )); do
	if [[ -a .test$var.in ]]; then
		
		echo '---------------------------------------------------------------------------'
		./a.out < .test$var.in > .fisout
		echo ' '
		echo ' '
		echo '---------------------------Input-------------------------------'
		cat .test$var.in	
		echo '---------------------------Output------------------------------'
		cat .test$var.out
		echo '-------------------------Your Output---------------------------'
		cat .fisout
		echo '---------------------------------------------------------------'
		
		if diff -q .fisout .test$var.out > /dev/null ; then	
			res[$((var))]='\e[42m\e[1m  AC  \e[49m\e[0m'
		else
			res[$((var))]='\e[41m\e[1m  WA  \e[49m\e[0m'
		fi
        echo -e "Status: ${res[$var]}"
		echo ' '
		echo ' '

	else
		break;
	fi	
done

echo -e '---------------------------------------------------------------------------\n\n'
echo 'Result:'
for (( foo=1; $foo<$var; foo++ )); do
	echo -e "${res[$foo]}"
done

rm -r -f .*.in
rm -r -f .*.out
rm -r -f .fisout
rm -r -f .nameIn

echo ' '
echo ' '
echo ' '

